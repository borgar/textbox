    "@babel/register": "~7.11.5",
    "@borgar/eslint-config": "~1.1.0",
    "babel-loader": "~8.1.0",
    "eslint": "~6.7.2",
    "eslint-plugin-import": "~2.22.1",
    "regenerator-runtime": "~0.13.7",
    "tap-min": "~2.0.0",
    "tape": "~5.0.1",
    "webpack": "~4.44.2",
    "webpack-cli": "~3.3.12",
    "webpack-dev-server": "~3.11.0"
