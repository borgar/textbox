    "@babel/plugin-proposal-export-default-from": "~7.17.12",
    "@babel/preset-env": "~7.18.2",
    "@borgar/eslint-config": "~2.2.1",
    "babel-loader": "~8.2.5",
    "eslint": "~8.17.0",
    "eslint-plugin-import": "~2.26.0",
    "tap-min": "~2.0.0",
    "tape": "~5.5.3",
    "webpack": "~5.73.0",
    "webpack-cli": "~4.10.0",
    "webpack-dev-server": "~4.9.2"
